<!DOCTYPE html>
<html>
<head>
	<link rel="stylesheet" type="text/css" href="">
	<title>Bookers</title>
</head>
  <body>
  	<%= flash[:notice] %>
	<h1>Books</h1>
	<table>
		<thead>
			<tr>
				<th>Title</th>
				<th>Body</th>
				<th colspan="3"></th>
			</tr>
		</thead>
				<tbody>
					<% @books.each do |book| %>
					<tr>
					<td><%= book.title %></td>
					<td><%= book.body %></td>
					<td><%= link_to "show", book_path(book.id) %></td>
		            <td><%= link_to "edit", edit_book_path(book.id) %></td>
		            <td><%= link_to "destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
					</tr>
			        <% end %>
		        </tbody>
	</table>
	<h2>New book</h2>
	  <% if @book.errors.any? %>
	  <% if @book.errors.count >= 2 %>
	  <h3><%= @book.errors.count %>errors prohibited this book from being saved:</h3>
	  <% else %>

	  <h3><%= @book.errors.count %>error prohibited this book from being saved:</h3>â€©
	  <% end %>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
      </ul>
      <% end %>
	  <%= form_for(@book) do |f| %>

	<h4>Title</h4>
	<%= f.text_field :title %>

	<h4>Body</h4>
	<%= f.text_field :body %>

	<br><%= f.submit 'Create Book' %></br>

	<% end %>
   </body>
</html>